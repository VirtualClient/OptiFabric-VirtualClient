{
  "schemaVersion": 1,
  "id": "optifabric",
  "version": "${version}",

  "name": "VirtualClient Optifine-Support",
  "description": "Adds support for Optifine to the VirtualClient. Based on the popular mod OptiFabric",
  "authors": [
    "Modmuss50",
    "Chocohead",
    "VirtualClient Team"
  ],
  "contact": {
    "sources": "https://github.com/VirtualClient/OptiFabric-VirtualClient",
    "issues": "https://virtualclient.gg/support/optifine"
  },
  "mixins": [
    "optifabric.mixins.json"
  ],
  "license": "MPL-2.0",
  "icon": "assets/optifabric/icon.png",
  "environment": "client",
  "entrypoints": {
    "mm:early_risers": [
      "me.modmuss50.optifabric.mod.TextSetup",
      "me.modmuss50.optifabric.mod.OptifabricSetup"
    ],
    "preLaunch": [
      "me.modmuss50.optifabric.mod.OptifabricLoadGuard"
    ]
  },
  "custom": {
    "fabric-renderer-indigo:force_compatibility" : true
  },
  "depends": {
    "fabricloader": ">=0.8.0",
    "minecraft": ["1.16.1", "1.16.2", "1.16.3", "1.16.4", "1.16.5", "1.17-alpha.21.8.b", "1.17-beta.4", "1.17", "1.17.1", "1.18-beta.1", "1.18", "1.18.1", "1.18.2", "1.19"],
    "mm": ">=2.0"
  },
  "conflicts": {
    "sodium": "*"
  },
  "breaks": {
    "no_fog": "*",
    "thallium": "*",
    "xradiation": "*",
    "cardinal-components-item": "<2.4.2",
    "architectury": ">1.2.72 <1.3.77",
    "meteor-client": ">=0.4.1"
  }
}
